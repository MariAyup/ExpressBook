<!DOCTYPE html>
<html lang="en">

<head>
  <%-include('partials/header') %>
  
</head>

<body>

  <%-include('partials/navigation') %>

  <div class="container p-4">
    <div class="row">
     
    <% books.forEach(function(book) { %>
    <div class="col-md-4">
      <div class="card">
        <div class="card-header">
          <p><%= book.titulo %></p>
        </div>
        <div class="card-body">
          <p><%= book.descripcion %></p>
        </div>
        <div class="card card-body">
          <p><%= book.codigo %></p>
        </div>
        <div class="card-body">
          <p><%= book.test %></p>
        </div><div class="card-body">
          <p><%= book.oraculo %></p>
        </div>

        <div class="card-footer">
          <a href="/delete/<%= book.id %>" class="btn btn-danger btn-block">
            Delete
          </a>
          <a href="/delete/<%= book.id %>" class="btn btn-danger btn-block">
            Modificar
          </a>
        </div>
    </div>
    <%})%>

  </div>

</body>

</html>